/* pages/product/product.wxss */
.scrollview{
  width: 100%;
  height:30px;
  /* 强制在一行显示 */
  white-space: nowrap;
}
.pageview{
  display: flex;
  vertical-align: center;
  align-items: center;
}
.select{
  height: 26px;
  line-height: 26px;
  padding-left: 8px;
  padding-right: 8px;
  border-radius: 13px;
  background-color: red;
  color: white;
  font-size: 15px;
  margin-left: 10px;
}
.normal{
  height: 26px;
  line-height: 26px;
  color: #666;
  font-size: 15px;
  margin-left: 10px;
}
.hr{
  background-color: lightgray;
  height: 1px;
  width: 100%;
  margin-top: 10px;
}