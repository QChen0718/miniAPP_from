/* pages/product/product.wxss */
.scrollview{
  width: 100%;
  height:30px;
  /* 强制在一行显示 */
  white-space: nowrap;
}
.pageview{
  display: flex;
  vertical-align: center;
  align-items: center;
}
.select{
  height: 26px;
  line-height: 26px;
  padding-left: 8px;
  padding-right: 8px;
  border-radius: 13px;
  background-color: red;
  color: white;
  font-size: 15px;
  margin-left: 10px;
}
.normal{
  height: 26px;
  line-height: 26px;
  color: #666;
  font-size: 15px;
  margin-left: 10px;
}
.hr{
  background-color: lightgray;
  height: 1px;
  width: 100%;
  margin-top: 10px;
}

.list_item{
  width: 100%;
  height: 160px;
}
.view1{
  display: flex;
  flex-direction: row;
  height: 25px;
  margin-top: 15px;
}
.type{
  border: 1px solid #cccccc;
  border-radius: 3px;
  margin-left: 15px;
  margin-right: 10px;
  height: 20px;
  font-size: 15px;
  color: gray;
}
.tuijian{
  margin-left: 15px;
  color: white;
  text-align: center;
  background-color: red;
  border-radius: 3px;
  font-size: 12px;
  height: 20px;
  line-height: 20px;
  width: 40px;
}
.view2{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  margin-top: 5px;
}
.tag{
  height: 20px;
  border-radius: 10px;
  margin-left: 15px;
  line-height: 20px;
  color: gray;
  font-size: 14px;
  background-color: lightgray;
  padding-left: 4px;
  padding-right: 4px;
}
.zaishou{
  height: 20px;
  border-radius: 10px;
  margin-left: 15px;
  line-height: 20px;
  color: blue;
  font-size: 14px;
  background-color: lightgray;
  padding-left: 4px;
  padding-right: 4px;
}
.view3{
  display: flex;
  flex-direction: row;
  height: 60px;
  margin-top: 10px
}
.subview{
  width: 25%;
  height: 100%;
  margin-left: 15px;
}
.progress{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  text-align: center;
  background-color: lightgray;
}
.title{
  font-size: 18px;
}
.title2{
  font-size: 18px;
  color: red;
}
.desc{
  font-size: 12px;
  color: lightgray;
  margin-top: 10px;
}
.item_hr{
  height: 10px;
  background-color: lightgray;
  width: 100%;
  margin-top: 20px;
}
.nodata{
  width: 100%;
  text-align: center;
  vertical-align: center;
  align-items: center;
  justify-content: center;
  background-color: red;
}